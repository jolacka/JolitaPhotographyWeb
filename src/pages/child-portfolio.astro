---
import { Image } from 'astro:assets'
import Layout from '../layouts/Layout.astro'
import PhotoSwipe from '../components/PhotoSwipe.astro'

import aboutImage from '../assets/portfolio/child/about.jpg'
import image1 from '../assets/portfolio/child/1.jpg'
import image2 from '../assets/portfolio/child/2.jpg'
import image3 from '../assets/portfolio/child/3.jpg'
import image4 from '../assets/portfolio/child/4.jpg'
import image5 from '../assets/portfolio/child/5.jpg'
import image6 from '../assets/portfolio/child/6.jpg'
import image7 from '../assets/portfolio/child/7.jpg'
import image8 from '../assets/portfolio/child/8.jpg'
import image9 from '../assets/portfolio/child/9.jpg'
import image10 from '../assets/portfolio/child/10.jpg'
import image11 from '../assets/portfolio/child/11.jpg'
import image12 from '../assets/portfolio/child/12.jpg'

const portfolioImages = [
	image1,
	image2,
	image3,
	image4,
	image5,
	image6,
	image7,
	image8,
	image9,
	image10,
	image11,
	image11
]
---

<Layout title="Kids" description="About kids photography">
	<div class="container mx-auto mt-20 flex space-x-2 px-6">
		<a href="/JolitaPhotographyWeb/#formats-photoshoots" aria-label="Open main page">Home</a>
		<span>/</span>
		<a
			href="/JolitaPhotographyWeb/#"
			class="text-brightPink"
			aria-label="Open child photosession format">Kids photography</a
		>
	</div>

	<!-- About Section -->
	<section id="about" data-anchor="about">
		<div
			class="container mx-auto mt-10 flex flex-col items-start space-y-12 px-6 md:flex-row md:items-center md:space-y-0"
		>
			<!-- Left item -->
			<div class="flex flex-col space-y-6 pr-2 md:w-2/3 md:space-y-12">
				<h2
					class="animate-hide whitespace-nowrap font-serif text-4xl text-brightPink md:pr-2 md:text-5xl lg:text-6xl"
				>
					Kids photography
				</h2>
				<div class="flex flex-col space-y-6">
					<p>
						Children's photography is a valuable memory, a beautiful story to remember. Portraits
						and general plans with the whole family taken at different ages, as well as shots from
						holidays and captured moments of everyday life will become a wonderful section of your
						family photo album, will bring joy when given to grandparents or keep for safe memories.
					</p>
				</div>
			</div>
			<!-- About Image -->
			<div class="overflow-hidden md:h-[20rem] md:w-1/3 xl:h-[24rem]">
				<Image
					src={aboutImage}
					alt="Child picture"
					format="avif"
					class="h-full w-full object-cover"
				/>
			</div>
		</div>
	</section>

	<!-- Portfolio Section -->
	<section id="portfolio" data-anchor="portfolio">
		<div class="container mx-auto mt-20 flex flex-col space-y-6 px-6 md:space-y-12">
			<h2
				class="animate-hide flex flex-col whitespace-nowrap pr-2 font-serif text-4xl text-brightPink md:text-5xl lg:text-6xl"
			>
				Portfolio
			</h2>
			<!-- Photo Swipe section -->
			<PhotoSwipe
				images={portfolioImages}
				galleryId="kids-portfolio"
				className="grid grid-cols-2 gap-4 md:grid-cols-3 lg:grid-cols-4"
			/>
		</div>
	</section>
</Layout>

<script>
	import '../js/animation.js'
</script>
